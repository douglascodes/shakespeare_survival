<h1>Listing characters</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Gender</th>
    <th>Ever married</th>
    <th>Dies</th>
    <th>Murderer</th>
    <th>Ruler</th>
    <th>Aka</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.first_name %></td>
    <td><%= character.last_name %></td>
    <td><%= character.gender %></td>
    <td><%= character.ever_married %></td>
    <td><%= character.dies %></td>
    <td><%= character.murderer %></td>
    <td><%= character.ruler %></td>
    <td><%= character.aka %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

